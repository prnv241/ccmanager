 
<%- include("../partials/header.ejs") %>

<div class="cent">
  <div class="container boxes">
    <h2 class="mt-3" style="text-align: center;">Complete your profile</h2>
    <form action="/profile/lawyer/<%=law._id%>?_method=PUT" method="POST" class="mt-5"> 
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="prof[name]" value="<%=law.name%>" required>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" name="prof[email]" value="<%=law.email%>" required>
        </div>
        <div class="form-group">
          <label>Mobile No.</label>
          <input type="number" class="form-control" name="prof[number]" value="<%=law.number%>" required>
        </div>
        <div class="form-group">
          <label>Specialization</label>
          <select class="form-control" value="<%=law.special%>" name="prof[special]" required>
            <option selected>Select from below</option>
            <option>Civil Law</option>
            <option>Criminal Law</option>
            <option>Corporate Law</option>
            <option>Cyber Law</option>
            <option>Intellectual Property Law</option>
          </select>
        </div>
        <div class="form-group">
          <label>Profile Picture URL</label>
          <input type="text" class="form-control" name="prof[propic]" value="<%=law.propic%>" required>
        </div>
        <div class="form-group">
          <label>Address</label>
          <input type="text" class="form-control" name="prof[address]" value="<%=law.address%>" required>
        </div>
        <div class="form-group">
          <label>Bio</label>
          <textarea class="form-control" rows="4" name="prof[bio]"><%=law.bio%></textarea>
        </div>
        <div class="form-group mt-5">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
  </div>
</div>

<%- include("../partials/footer.ejs") %>