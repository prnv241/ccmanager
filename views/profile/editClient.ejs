 
<%- include("../partials/header.ejs") %>

<div class="cent">
  <div class="container boxes">
    <h2 class="mt-3" style="text-align: center;">Edit your profile</h2>
    <form action="/profile/client/<%=cli._id%>?_method=PUT" method="POST" class="mt-5"> 
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="prof[name]" value="<%=cli.name%>" required>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" name="prof[email]" value="<%=cli.email%>" required>
        </div>
        <div class="form-group">
          <label>Mobile No.</label>
          <input type="number" class="form-control" name="prof[number]" value="<%=cli.number%>" required>
        </div>
        <div class="form-group">
          <label>Profile Picture URL</label>
          <input type="text" class="form-control" name="prof[propic]" value="<%=cli.propic%>" required>
        </div>
        <div class="form-group mt-5">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
  </div>
</div>

<%- include("../partials/footer.ejs") %>