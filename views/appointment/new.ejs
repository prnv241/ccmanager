<%- include("../partials/header.ejs") %>

<div class="cent">
  <div class="container boxes">
    <h2 class="mt-3" style="text-align: center;">Create New Appointment</h2>
    <form action="/appointments/<%=law._id%>" method="POST" class="mt-5">
      <div class="form-group">
        <label>Lawyer Name</label>
        <input
          type="text"
          readonly
          class="form-control"
          name="appt[lname]"
          value="<%=law.name%>"
          required
        />
      </div>
      <div class="form-group">
        <label>Select Date</label>
        <input type="date" class="form-control" name="appt[date]" required />
      </div>
      <div class="form-group">
        <label>Select Time</label>
        <input type="time" class="form-control" name="appt[time]" required />
      </div>
      <button class="btn btn-outline-dark mt-2">Submit</button>
    </form>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
